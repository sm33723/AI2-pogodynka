{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ city.country }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ city.lat }}</td>
            </tr>
            <tr>
                <th>Lot</th>
                <td>{{ city.lot }}</td>
            </tr>
        </tbody>
    </table>

    <div><a class="btn btn-secondary mb-1" href="{{ path('app_city_index') }}">back to list</a></div>

    <div><a class="btn btn-outline-warning mb-1" href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a></div>

    {{ include('city/_delete_form.html.twig') }}
{% endblock %}
