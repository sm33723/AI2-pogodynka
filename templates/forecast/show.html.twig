{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ forecast.timestamp ? forecast.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.temperature }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ forecast.windSpeed }}</td>
            </tr>
            <tr>
                <th>Wind_direction</th>
                <td>{{ forecast.windDirection }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ forecast.humidity }}</td>
            </tr>
            <tr>
                <th>Air_quality</th>
                <td>{{ forecast.airQuality }}</td>
            </tr>
            <tr>
                <th>Cloud_cover</th>
                <td>{{ forecast.cloudCover }}</td>
            </tr>
            <tr>
                <th>Cloud_ceiling</th>
                <td>{{ forecast.cloudCeiling }}</td>
            </tr>
            <tr>
                <th>Rain</th>
                <td>{{ forecast.rain }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ forecast.visibility }}</td>
            </tr>
        </tbody>
    </table>

    <div><a class="btn btn-secondary mb-1" href="{{ path('app_forecast_index') }}">back to list</a></div>
    {% if is_granted('ROLE_FORECAST_EDIT') %}
        <div><a class="btn btn-outline-warning mb-1" href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a></div>
    {% endif %}
    {{ include('forecast/_delete_form.html.twig') }}
{% endblock %}
